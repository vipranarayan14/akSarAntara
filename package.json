{
  "name": "vtranslit",
  "version": "2.2.0",
  "description": "A transliterator between ITRANS and any Indic Script.",
  "main": "dist/vtranslit.js",
  "files": [
    "bin",
    "dist"
  ],
  "bin": {
    "translit": "bin/vtranslit.js"
  },
  "scripts": {
    "build": "rimraf dist && webpack",
    "eslint": "eslint --ignore-path .gitignore ./**/*.js",
    "precommit": "npm run eslint && npm run build",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags",
    "test": "mocha",
    "timetest": "npm run build && node bin/vtranslit.js -i timetest.txt -o timetest-output.txt"
  },
  "author": "Prasanna Venkatesh T S <vipranarayan14@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.15.0",
    "husky": "^0.14.3",
    "mocha": "^4.1.0",
    "rimraf": "^2.6.2",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "yargs": "^11.0.0"
  },
  "repository": "https://github.com/vipranarayan14/vtranslit.git"
}
